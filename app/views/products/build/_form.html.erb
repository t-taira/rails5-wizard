<%= form_for @product, url: wizard_path do |f| %>
  <% if @product.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= yield f %>

  <div class="actions">
    <%= f.submit "Continue" %>
    or <%= link_to "back", previous_wizard_path %>
    or <%= link_to "skip this step", next_wizard_path %>
  </div>
<% end %>
